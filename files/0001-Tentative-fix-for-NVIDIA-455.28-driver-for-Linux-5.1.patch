From 976b080c9f84a36c53c16e621ad6f0fdf83f9187 Mon Sep 17 00:00:00 2001
From: Joshua Strobl <joshua@streambits.io>
Date: Thu, 10 Dec 2020 19:02:38 +0200
Subject: [PATCH 1/1] Tentative fix for NVIDIA 455.28 driver for Linux 5.10

---
 common/inc/nv-linux.h                   | 6 ++++++
 nvidia-drm/nvidia-drm-gem-user-memory.c | 6 ++++++
 2 files changed, 12 insertions(+)

diff --git a/common/inc/nv-linux.h b/common/inc/nv-linux.h
index 2c4bb10..09248eb 100644
--- a/common/inc/nv-linux.h
+++ b/common/inc/nv-linux.h
@@ -11,6 +11,7 @@
 #ifndef _NV_LINUX_H_
 #define _NV_LINUX_H_
 
+#include <linux/version.h>
 #include "nvstatus.h"
 #include "nv-misc.h"
 #include "nv.h"
@@ -170,6 +171,11 @@ static inline uid_t __kuid_val(uid_t uid)
 #include <linux/pagemap.h>
 #include <linux/dma-mapping.h>
 
+#if (LINUX_VERSION_CODE >= KERNEL_VERSION(5, 10, 0))
+// dma-mapping.h has been split on commit 0a0f0d8be76dcd4390ff538e7060fda34db79717 so this needs to be incldued now for the build to work
+#include <linux/dma-map-ops.h>
+#endif
+
 #if defined(NV_LINUX_DMA_MAP_OPS_H_PRESENT)
 #include <linux/dma-map-ops.h>
 #endif
diff --git a/nvidia-drm/nvidia-drm-gem-user-memory.c b/nvidia-drm/nvidia-drm-gem-user-memory.c
index 2085609..d918d76 100644
--- a/nvidia-drm/nvidia-drm-gem-user-memory.c
+++ b/nvidia-drm/nvidia-drm-gem-user-memory.c
@@ -20,6 +20,7 @@
  * DEALINGS IN THE SOFTWARE.
  */
 
+#include <linux/version.h>
 #include "nvidia-drm-conftest.h"
 
 #if defined(NV_DRM_AVAILABLE)
@@ -62,9 +63,14 @@ static struct sg_table *__nv_drm_gem_user_memory_prime_get_sg_table(
     struct nv_drm_gem_user_memory *nv_user_memory = to_nv_user_memory(nv_gem);
     struct drm_gem_object *gem = &nv_gem->base;
 
+#if (LINUX_VERSION_CODE >= KERNEL_VERSION(5, 10, 0))
+    // New parameter to drm_prime_pages_to_sg (commit 707d561f77b5e2a6f90c9786bee44ee7a8dedc7e)
+    return drm_prime_pages_to_sg(nv_gem->nv_dev->dev, nv_user_memory->pages, nv_user_memory->pages_count);
+#else
     return nv_drm_prime_pages_to_sg(gem->dev,
                                     nv_user_memory->pages,
                                     nv_user_memory->pages_count);
+#endif
 }
 
 static void *__nv_drm_gem_user_memory_prime_vmap(
